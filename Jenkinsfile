pipeline {
    agent any  // Run on any available agent (e.g., your local machine)

    stages {
        stage('Build') {
            steps {
                echo 'Hello, Jenkins! Running the build step.'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }
}
